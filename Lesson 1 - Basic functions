#include <iostream>

int main() {
 
 double weight;
 int planet;

  std::cout << "Hey Little Mac, how much do you weigh?\n";
  std::cin >> weight;

 while (true) {

  std::cout << "Great! What planet are you fighting on atm?\n";
  std::cout << "Here are your options,\n";
  std::cout << "1. Mercury  2. Venus   3. Mars\n";
  std::cout << "4. Jupiter  5. Saturn  6. Uranus  7. Neptune\n";
  std::cin >> planet;



  switch (planet) {

    case 1 :
     weight = weight * 0.78;
     break;
    case 2 :
     weight = weight * 0.91;
     break;
    case 3 :
     weight = weight * 0.38;
     break;
    case 4 :
     weight = weight * 2.34;
     break;
    case 5 :
     weight = weight * 	1.06;
     break;
    case 6 :
     weight = weight * 	0.92;
     break;
    case 7 :
     weight = weight * 1.19;
     break;
    default :
     std::cout << "This is not one of the available planets, please pick one of the above.\n";
     continue;
     
  }
  break;
}
  std::cout << "Your weight on this planet is " << weight << "!\n";
  
  
  
  
  
  
  
  
  
  
  
  
}
